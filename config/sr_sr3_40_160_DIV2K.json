{
  "name": "sr_DIV2K_40_160",
  "phase": "train",
  // train or val
  "gpu_ids": [
    1
  ],
  "path": {
    //set the path
    "log": "logs",
    "tb_logger": "tb_logger",
    "results": "results",
    "checkpoint": "checkpoint",
    "resume_state": null
  },
  "datasets": {
    "train": {
      "name": "DIV2k",
      "mode": "HR",
      // whether need LR img
      "dataroot": "/newHome/S2_HHH/gitte/ddpm_our/dataset/DIV2K/train_40_160",
      "datatype": "img",
      //lmdb or img, path of img files
      "l_resolution": 40,
      // low resolution need to super_resolution
      "r_resolution": 160,
      // high resolution
      "batch_size": 24,
      "num_workers": 8,
      "use_shuffle": true,
      "data_len": -1
      // -1 represents all data used in train
    },
    "val": {
      "name": "DIV2k",
      "mode": "LRHR",
      "dataroot": "/newHome/S2_HHH/gitte/ddpm_our/dataset/DIV2K/valid_40_160",
      "datatype": "img",
      //lmdb or img, path of img files
      "l_resolution": 40,
      "r_resolution": 160,
      "batch_size": 16,
	  "num_workers": 3,
	  // 是否乱序
	  "use_shuffle": true,
	  "data_len": -1
    }
  },
  "model": {
    "which_model_G": "sr3",
    // use the ddpm or sr3 network structure
    "finetune_norm": false,
    "unet": {
      "in_channel": 6,
      "out_channel": 3,
      "inner_channel": 64,
      "norm_groups": 16,
      "channel_multiplier": [
        1,
        2,
        4,
        8,
        8
      ],
      "attn_res": [
        // 16
		16
      ],
      "res_blocks": 2,
      "dropout": 0.0
    },
    "beta_schedule": {
      // use munual beta_schedule for acceleration
      "train": {
        "schedule": "linear",
        "n_timestep": 1000,
        "linear_start": 1e-6,
        "linear_end": 1e-2
      },
      "val": {
        "schedule": "linear",
        "n_timestep": 1000,
        "linear_start": 1e-6,
        "linear_end": 1e-2
      }
    },
    "diffusion": {
      "image_size": 160,
      "channels": 3,
      //sample channel
      "conditional": true
      // unconditional generation or unconditional generation(super_resolution)
    }
  },
  "train": {
    "n_iter": 100000,
    "val_freq": 1e4,
    "save_checkpoint_freq": 1e4,
    "print_freq": 200,
    "optimizer": {
      "type": "adamw",
      "lr": 1e-4
    },
    "ema_scheduler": {
      // not used now
      "step_start_ema": 5000,
      "update_ema_every": 1,
      "ema_decay": 0.9999
    }
  },
  "wandb": {
    "project": "sr_DIV2K_40_160"
  }
}